{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
